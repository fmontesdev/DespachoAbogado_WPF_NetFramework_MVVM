<Window x:Class="View.Windows.NuevaActuacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="Nueva Actuación"
        Width="550"
        Height="420"
        Background="#FFF0F0F0"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converter nativo para bool a visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Estilo para el icono del campo -->
        <Style x:Key="FieldIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el placeholder -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="9,5,0,0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- Estilo para el TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el ComboBox -->
        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el botón de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="#1E3A52"
                Padding="10"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <TextBlock Text="Crear Actuación"
                       Foreground="White"
                       FontSize="21"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- CONTENIDO -->
        <Grid Grid.Row="1" Margin="18">
            <Border Background="#FFE7EFF6"
                    CornerRadius="11"
                    Padding="16,11,16,16"
                    BorderBrush="#FFC0D2E3"
                    BorderThickness="1">

                <StackPanel>
                    <!-- Título de sección -->
                    <TextBlock Text="Datos de la Actuación"
                               FontSize="12"
                               Foreground="#7A7A7A"
                               Margin="2,0,0,8"/>

                    <!-- Expediente -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📁"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"/>
                        <Grid Grid.Column="1">
                            <ComboBox x:Name="cbExpediente"
                                      ItemsSource="{Binding Expedientes}"
                                      SelectedItem="{Binding ExpedienteSeleccionado}"
                                      DisplayMemberPath="CodigoConClienteYDni"
                                      Style="{StaticResource InputComboBox}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      SelectionChanged="CbExpediente_SelectionChanged"
                                      PreviewMouseDown="CbExpediente_PreviewMouseDown"
                                      KeyUp="CbExpediente_KeyUp"/>
                            <TextBlock x:Name="placeholderExpediente"
                                       Text="Selecciona un expediente"
                                       Style="{StaticResource PlaceholderText}"/>
                        </Grid>
                    </Grid>

                    <!-- Tipo -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="215"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📋"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"/>
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding TiposDisponibles}"
                                  SelectedValue="{Binding Tipo, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value"
                                  Style="{StaticResource InputComboBox}"/>
                    </Grid>

                    <!-- Descripción -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📝"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="2,0,8,0"
                                   VerticalAlignment="Top"/>
                        <Grid Grid.Column="1">
                            <TextBox x:Name="txtDescripcion"
                                     Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                                     Background="White"
                                     Height="80"
                                     Padding="8,4"
                                     FontSize="13"
                                     BorderBrush="#FFC0D2E3"
                                     BorderThickness="1"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxLength="500"
                                     TextChanged="TextBox_TextChanged"/>
                            <TextBlock x:Name="placeholderDescripcion"
                                       Text="Descripción de la actuación (opcional)"
                                       Style="{StaticResource PlaceholderText}"
                                       Padding="9,8,0,0"/>
                        </Grid>
                    </Grid>

                    <!-- Mensaje de Error -->
                    <Border Background="#FFFFE0E0"
                            BorderBrush="#FFFF6B6B"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="8,6"
                            Margin="0,0,0,10"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#FFD32F2F"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,5,0,0">
                        <Button Content="➕ Crear"
                                Command="{Binding CrearCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#6AAE6A"
                                Margin="0,0,10,0"/>

                        <Button Content="❌ Cancelar"
                                Command="{Binding CancelarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#F5C469"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
