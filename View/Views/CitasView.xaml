<UserControl x:Class="View.Views.CitasView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:View.Views"
         xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         mc:Ignorable="d"
         d:DesignWidth="910"
         d:DesignHeight="700">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="Background" Value="#FFE7EFF6"/>
            <Setter Property="CornerRadius" Value="11"/>
            <Setter Property="Padding" Value="16,11,16,14"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,8"/>
        </Style>

        <Style x:Key="FieldIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ReadOnlyField" TargetType="TextBlock">
            <Setter Property="Background" Value="#1E3A52"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="InputDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TotalLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF3D3D3D"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="24"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F3F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical">

            <!-- BORDER: Datos de la Cita -->
            <Border Style="{StaticResource Border}"
                    Margin="0,0,0,12">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Gestión de Citas" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- FILA 1: Nombre Cliente | Expediente (no editables) -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="405"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="196"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nombre Completo Cliente -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👤"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding NombreCompletoCliente}"
                                       Style="{StaticResource ReadOnlyField}"/>
                        </Grid>

                        <!-- Código Expediente -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="📁"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding CodigoExpediente, TargetNullValue='Sin expediente'}"
                                       Style="{StaticResource ReadOnlyField}"/>
                        </Grid>
                    </Grid>

                    <!-- FILA 2: Fecha | Horario | Modalidad | Estado (editables) -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fecha -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="📅"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <DatePicker Grid.Column="1"
                                        SelectedDate="{Binding Fecha, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayDateStart="{x:Static sys:DateTime.Now}"
                                        CalendarOpened="DatePicker_CalendarOpened"
                                        Style="{StaticResource InputDatePicker}"/>
                        </Grid>

                        <!-- Horario -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="⏰"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding HorariosDisponibles}"
                                      SelectedItem="{Binding Horario, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource InputComboBox}"/>
                        </Grid>

                        <!-- Modalidad -->
                        <Grid Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="💻"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ModalidadesDisponibles}"
                                      SelectedValue="{Binding Modalidad, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Key"
                                      DisplayMemberPath="Value"
                                      Style="{StaticResource InputComboBox}"/>
                        </Grid>

                        <!-- Estado -->
                        <Grid Grid.Column="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="📊"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <ComboBox x:Name="cbEstado"
                                      Grid.Column="1"
                                      ItemsSource="{Binding EstadosDisponibles}"
                                      SelectedValue="{Binding Estado, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Key"
                                      DisplayMemberPath="Value"
                                      Style="{StaticResource InputComboBox}"
                                      SelectionChanged="CbEstado_SelectionChanged"
                                      Loaded="CbEstado_Loaded"/>
                        </Grid>
                    </Grid>

                    <!-- FILA 3: Motivo -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📝"
                                   Grid.Column="0"
                                   Style="{StaticResource FieldIcon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Top"/>
                        <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="1"
                                 Background="White"
                                 Height="50"
                                 Padding="8,4"
                                 FontSize="13"
                                 BorderBrush="#FFC0D2E3"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="500"/>
                    </Grid>

                    <!-- Mensaje de Error -->
                    <Border Background="#FFFFE0E0" 
                            BorderBrush="#FFFF6B6B" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8,6"
                            Margin="0,0,0,10"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#FFD32F2F" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Botones de acción -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,5,0,2">
                        <Button Content="➕ Nueva" 
                                Command="{Binding NuevoCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#6AAE6A"
                                Margin="0,0,10,0"/>

                        <Button Content="✏ Editar" 
                                Command="{Binding EditarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#FF5B9BD4"
                                Margin="0,0,10,0"/>

                        <Button Content="❌ Eliminar" 
                                Command="{Binding EliminarCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#E56A5C"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- BORDER: Buscar y Lista de Citas -->
            <Border Background="#FFE7EFF6"
                    CornerRadius="11"
                    Padding="16,11,16,14"
                    BorderBrush="#FFC0D2E3"
                    BorderThickness="1">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Buscar por" 
                               Style="{StaticResource SectionTitle}"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Campo de búsqueda -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍"
                                       Grid.Column="0"
                                       Style="{StaticResource FieldIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <Grid Grid.Column="1">
                                <TextBox x:Name="txtBuscar"
                                         Text="{Binding Buscar, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBox}"
                                         TextChanged="TextBox_TextChanged"/>
                                <TextBlock x:Name="placeholderBuscar"
                                           Text="Nombre de cliente, Código de expediente o Estado"
                                           Style="{StaticResource SectionTitle}"
                                           Foreground="#AAAAAA"
                                           Padding="9,5,0,0"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </Grid>

                        <!-- Botón Limpiar -->
                        <Button Grid.Column="2"
                                Content="Limpiar"
                                Command="{Binding LimpiarBusquedaCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#F5C469"
                                Width="80"
                                Height="30"
                                VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Text="Lista de Citas" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Citas}"
                              SelectedItem="{Binding CitaSeleccionada}"
                              AutoGenerateColumns="False"
                              Height="275"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderBrush="#FFC0D2E3"
                              BorderThickness="1"
                              RowStyle="{StaticResource DataGridRowStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat='dd/MM/yyyy'}" Width="140"/>
                            <DataGridTextColumn Header="Horario" Binding="{Binding Horario}" Width="140"/>
                            <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.NombreCompleto}" Width="*"/>
                            <DataGridTextColumn Header="Expediente" Binding="{Binding Expediente.Codigo, TargetNullValue='Sin expediente'}" Width="140"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding EstadoFormateado}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Total -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total de Citas:" 
                                   Style="{StaticResource TotalLabel}"
                                   Margin="2,6,0,0"/>

                        <TextBlock Text="{Binding TotalCitas}"
                                   Style="{StaticResource TotalLabel}"
                                   Margin="6,6,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
