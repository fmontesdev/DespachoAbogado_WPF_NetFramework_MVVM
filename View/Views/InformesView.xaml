<UserControl x:Class="View.Views.InformesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Views"
             xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
             mc:Ignorable="d"
             d:DesignWidth="910"
             d:DesignHeight="700">

    <UserControl.Resources>
        <!-- Converter nativo para bool a visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Estilo para el Border -->
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="Background" Value="#FFE7EFF6"/>
            <Setter Property="CornerRadius" Value="11"/>
            <Setter Property="Padding" Value="16,11,16,14"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el titulo de seccion -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,8"/>
        </Style>

        <!-- Estilo para los iconos -->
        <Style x:Key="Icon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para DatePicker -->
        <Style x:Key="InputDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el boton de accion -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Capa base con el color del boton -->
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>

                            <!-- Capa de overlay para efectos hover/pressed -->
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Presionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para items de la lista de informes -->
        <Style x:Key="InformeListItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#C0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#D6E9F8"/>
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsSelected" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#F0F7FC"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- COLUMNA IZQUIERDA: Lista de Informes -->
        <Border Grid.Column="0" 
                Style="{StaticResource Border}">
            <StackPanel>
                <TextBlock Text="Informes disponibles" 
                           Style="{StaticResource SectionTitle}"/>

                <ListBox ItemsSource="{Binding InformesDisponibles}"
                         SelectedItem="{Binding InformeSeleccionado, Mode=TwoWay}"
                         IsSynchronizedWithCurrentItem="True"
                         ItemContainerStyle="{StaticResource InformeListItem}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Height="510">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Titulo}" 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Foreground="#2C3E50"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- COLUMNA DERECHA: Opciones del Informe -->
        <Border Grid.Column="2" 
                Style="{StaticResource Border}">
            <StackPanel>
                <TextBlock Text="Opciones del Informe" 
                           Style="{StaticResource SectionTitle}"/>

                <!-- Contenido dinamico segun informe seleccionado -->
                <StackPanel Margin="0,10,0,0"
                            Visibility="{Binding TieneInformeSeleccionado, Converter={StaticResource BoolToVisibilityConverter}}">

                    <!-- Titulo y descripcion del informe seleccionado -->
                    <TextBlock Text="{Binding InformeSeleccionado.Titulo}" 
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="{Binding InformeSeleccionado.Descripcion}" 
                               FontSize="12"
                               Foreground="#7A7A7A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,25"/>

                    <!-- FILTROS: Fecha para Agenda de Citas -->
                    <StackPanel Visibility="{Binding MostrarFiltroFecha, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,-6,0,25">
                        <TextBlock Text="Selecciona una fecha:" 
                                   FontSize="11"
                                   Foreground="#7A7A7A"
                                   Margin="2,0,0,6"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <DatePicker Width="240"
                                        SelectedDate="{Binding FechaSeleccionada}"
                                        DisplayDate="{Binding FechaSeleccionada}"
                                        FirstDayOfWeek="Monday"
                                        Style="{StaticResource InputDatePicker}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Boton Generar Informe -->
                    <Button Content="Generar Informe"
                            Command="{Binding GenerarInformeCommand}"
                            Style="{StaticResource ActionButton}"
                            Background="#4A90E2"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
