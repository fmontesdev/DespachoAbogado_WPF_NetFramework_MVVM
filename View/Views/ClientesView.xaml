<UserControl x:Class="View.Views.ClientesView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:View.Views"
xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
mc:Ignorable="d"
d:DesignWidth="910"
d:DesignHeight="700">

    <UserControl.Resources>
        <!-- Converter nativo para bool a visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Estilo para el Border -->
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="Background" Value="#FFE7EFF6"/>
            <Setter Property="CornerRadius" Value="11"/>
            <Setter Property="Padding" Value="16,11,16,14"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el título de sección -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,8"/>
        </Style>

        <!-- Estilo para la etiqueta de campo -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#7A7A7A"/>
            <Setter Property="Margin" Value="2,0,0,4"/>
        </Style>

        <!-- Estilo para los iconos de los TextBox -->
        <Style x:Key="TextBoxIcon" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E3A52"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para el TextBox -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#FFC0D2E3"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Estilo para el placeholder del TextBox -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="9,5,0,0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- Estilo para el total -->
        <Style x:Key="TotalLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF3D3D3D"/>
        </Style>

        <!-- Estilo para el botón de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Capa base con el color del botón -->
                            <Border x:Name="baseBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}"/>

                            <!-- Capa de overlay para efectos hover/pressed -->
                            <Border x:Name="overlayBorder"
                                    Background="Transparent"
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.07"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Presionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="overlayBorder" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Black" Opacity="0.14"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para las celdas del DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Celda seleccionada -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para las filas del DataGrid -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="MinHeight" Value="24"/>
            <Style.Triggers>
                <!-- Fila seleccionada -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFC4DCF4"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <!-- Hover sobre la fila -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F3F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <StackPanel Orientation="Vertical">

            <!-- BORDER: Datos del Cliente -->
            <Border Style="{StaticResource Border}"
                    Margin="0,0,0,12">

                <StackPanel Orientation="Vertical">
                    <!-- Título de la sección-->
                    <TextBlock Text="Gestión de Clientes" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- Grid unificado con todas las filas -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- FILA 1: Nombre | Apellidos | DNI -->
                        <!-- Nombre -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👤" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="100"/>
                        </Grid>

                        <!-- Apellidos -->
                        <Grid Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="👥" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Apellidos, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="100"/>
                        </Grid>

                        <!-- DNI -->
                        <Grid Grid.Row="0" Grid.Column="4" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🆔" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Dni, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="20"/>
                        </Grid>

                        <!-- FILA 2: Teléfono | Email -->
                        <!-- Teléfono -->
                        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="📞" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="20"/>
                        </Grid>

                        <!-- Email -->
                        <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="✉" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="100"/>
                        </Grid>

                        <!-- FILA 3: Población | Dirección -->
                        <!-- Población -->
                        <Grid Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🏙️" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Poblacion, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="100"/>
                        </Grid>

                        <!-- Dirección -->
                        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🏠" 
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}"
                                     Grid.Column="1"
                                     Style="{StaticResource InputTextBox}"
                                     MaxLength="255"/>
                        </Grid>
                    </Grid>

                    <!-- Mensaje de Error (si existe) -->
                    <Border Background="#FFFFE0E0" 
                            BorderBrush="#FFFF6B6B" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="8,6"
                            Margin="0,0,0,10"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#FFD32F2F" 
                                   FontSize="12" 
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Botones de acción -->
                    <Grid Margin="0,5,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Botones principales alineados a la izquierda -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="➕ Nuevo" 
                                    Command="{Binding NuevoCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Background="#6AAE6A"
                                    Margin="0,0,10,0"/>

                            <Button Content="✏ Editar" 
                                    Command="{Binding EditarCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Background="#FF5B9BD4"
                                    Margin="0,0,10,0"/>

                            <Button Content="❌ Eliminar" 
                                    Command="{Binding EliminarCommand}"
                                    Style="{StaticResource ActionButton}"
                                    Background="#E56A5C"/>
                        </StackPanel>

                        <!-- Botón de expedientes alineado a la derecha -->
                        <Button Grid.Column="2"
                                Content="📁 Exp. Cliente" 
                                Command="{Binding VerExpedientesCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#1E3A52"
                                Width="140"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- BORDER: Buscar por (parte superior) -->
            <Border Background="#FFE7EFF6"
                    CornerRadius="11,11,0,0"
                    Padding="16,11,16,10"
                    BorderBrush="#FFC0D2E3"
                    BorderThickness="1,1,1,0">

                <StackPanel Orientation="Vertical">
                    <!-- Título de la sección -->
                    <TextBlock Text="Buscar por" 
                               Style="{StaticResource SectionTitle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Campo de búsqueda único -->
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍"
                                       Grid.Column="0"
                                       Style="{StaticResource TextBoxIcon}"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <Grid Grid.Column="1">
                                <TextBox x:Name="txtBuscar"
                                         Text="{Binding Buscar, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBox}"
                                         TextChanged="TextBox_TextChanged"/>
                                <TextBlock x:Name="placeholderBuscar"
                                           Text="Nombre, Apellidos, DNI o Población"
                                           Style="{StaticResource PlaceholderText}"/>
                            </Grid>
                        </Grid>

                        <!-- Botón Limpiar -->
                        <Button Grid.Column="2"
                                Content="Limpiar"
                                Command="{Binding LimpiarBusquedaCommand}"
                                Style="{StaticResource ActionButton}"
                                Background="#F5C469"
                                Width="80"
                                Height="30"
                                VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- BORDER: DataGrid (parte inferior) -->
            <Border Background="#FFE7EFF6"
                    CornerRadius="0,0,11,11"
                    Padding="16,0,16,14"
                    BorderBrush="#FFC0D2E3"
                    BorderThickness="1,0,1,1">

                <StackPanel Orientation="Vertical">
                    <!-- Título de la sección -->
                    <TextBlock Text="Lista de Clientes" 
                               Style="{StaticResource SectionTitle}"/>

                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Clientes}"
                              SelectedItem="{Binding ClienteSeleccionado}"
                              AutoGenerateColumns="False"
                              Height="297"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderBrush="#FFC0D2E3"
                              BorderThickness="1"
                              RowStyle="{StaticResource DataGridRowStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="140"/>
                            <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="*"/>
                            <DataGridTextColumn Header="DNI" Binding="{Binding Dni}" Width="110"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Población" Binding="{Binding Poblacion}" Width="160"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Total -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total de Clientes:" 
                                   Style="{StaticResource TotalLabel}"
                                   Margin="2,6,0,0"/>

                        <TextBlock Text="{Binding TotalClientes}"
                                   Style="{StaticResource TotalLabel}"
                                   Margin="6,6,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
